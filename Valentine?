    <h1 style="color: crimson;">Will you be my Valentine? ðŸ’–</h1>
    <script>
        let hearts = [];

        function setup() {
            createCanvas(600, 400);
            for (let i = 0; i < 20; i++) {
                hearts.push(new Heart());
            }
        }

        function draw() {
            background('#FFF0F5');
            for (let heart of hearts) {
                heart.move();
                heart.display();
            }
        }

        class Heart {
            constructor() {
                this.x = random(width);
                this.y = random(-50, -10);
                this.size = random(10, 20);
                this.speed = random(1, 3);
            }

            move() {
                this.y += this.speed;
                if (this.y > height) {
                    this.y = random(-50, -10);
                    this.x = random(width);
                }
            }

            display() {
                fill(220, 20, 60);
                noStroke();
                ellipse(this.x, this.y, this.size, this.size);
                ellipse(this.x + this.size, this.y, this.size, this.size);
                triangle(
                    this.x - this.size / 2, this.y,
                    this.x + this.size * 1.5, this.y,
                    this.x + this.size / 2, this.y + this.size * 1.5
                );
            }
        }

        function answer(val) {
            if (val === 'yes') {
                alert("De toute faÃ§on tu n'avais pas le choix <3");
            } else {
                alert("Mauvaise rÃ©ponse, veuillez rÃ©essayer");
            }
        }
    </script>
    <button onclick="answer('yes')">Oui</button>
    <button onclick="answer('no')">Non</button>
